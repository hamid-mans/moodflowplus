<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>MoodFlow+ - {% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fomantic-ui@2.9.4/dist/semantic.min.css">
            <script src="https://cdn.jsdelivr.net/npm/fomantic-ui@2.9.4/dist/semantic.min.js"></script>
            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <div class="ui secondary menu">
        <a href="{{ path('app_home') }}" class="active item">
            Accueil
        </a>
        <a class="item">
            A propos
        </a>
        <div class="right menu">
            {% if not app.user %}
                <a href="{{ path('app_register') }}" class="ui item">
                    Cr√©er un compte
                </a>
                <a href="{{ path('app_login') }}" class="ui item">
                    Se connecter
                </a>
            {% else %}
                <a class="ui item" href="{{ path('app_profil') }}">
                    {{ app.user.name }} <i class="ui angle double right icon"></i>
                </a>
            {% endif %}
        </div>
    </div>
        <div class="content">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
