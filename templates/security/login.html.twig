{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <h1>Se connecter</h1>

    <form method="post" class="ui form">
        {% if error %}
            <div class="ui red message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="field">
            <label>Email</label>
            <input type="email" name="_username" id="username" class="form-control" autocomplete="email" autofocus>
        </div>

        <div class="field">
            <label>Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password">
        </div>

        <div class="field">
            <input type="submit" value="SE CONNECTER" class="ui purple button">
        </div>

        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

    </form>
{% endblock %}
